{
  "name": "electron-react-ts",
  "version": "0.0.0",
  "description": "",
  "license": "",
  "author": "",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:esbuild dev:electron",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
    "build": "tsc && cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.8.0",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electronmon": "^2.0.3",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.2"
  }
}
